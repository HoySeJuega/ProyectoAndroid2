<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.camilo.proyectoandroid.Cancha5"
    android:background="@drawable/cancha">

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/iB1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boton"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:onClick="Arquero" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/iB2"
        android:background="@drawable/boton"
        android:layout_above="@+id/iB1"
        android:layout_toEndOf="@+id/iB1"
        android:onClick="Defensor"
        android:clickable="true" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/iB3"
        android:background="@drawable/boton"
        android:layout_above="@+id/iB1"
        android:layout_toStartOf="@+id/iB1"
        android:onClick="Defensor" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/iB4"
        android:background="@drawable/boton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/iB2"
        android:onClick="Delantero" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/iB5"
        android:background="@drawable/boton"
        android:layout_alignTop="@+id/iB4"
        android:layout_alignStart="@+id/iB3"
        android:clickable="true"
        android:onClick="Delantero" />
</RelativeLayout>
