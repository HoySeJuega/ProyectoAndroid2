<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.camilo.proyectoandroid.Cancha7"
    android:background="@drawable/cancha">

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton4"
        android:background="@drawable/boton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="Arquero" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton7"
        android:background="@drawable/boton"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_toEndOf="@+id/imageButton4"
        android:clickable="true"
        android:onClick="Delantero" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton9"
        android:background="@drawable/boton"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton8"
        android:clickable="true"
        android:onClick="Delantero" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton10"
        android:background="@drawable/boton"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="Defensor" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton6"
        android:background="@drawable/boton"
        android:layout_above="@+id/imageButton4"
        android:layout_alignParentEnd="true"
        android:onClick="Defensor"
        android:clickable="true" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton8"
        android:background="@drawable/boton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageButton4"
        android:onClick="Defensor"
        android:clickable="true" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageButton11"
        android:background="@drawable/boton"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageButton9"
        android:clickable="true"
        android:onClick="Delantero" />
</RelativeLayout>
