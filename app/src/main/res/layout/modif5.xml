<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.camilo.proyectoandroid.Modif5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modificar Fecha "
                android:id="@+id/bt1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:onClick="dia" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/eT1"
                android:layout_below="@+id/bt1"
                android:layout_alignParentStart="true"
                android:editable="false"
                android:enabled="true" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/eT3"
                android:layout_below="@+id/bt2"
                android:layout_alignParentStart="true"
                android:enabled="true"
                android:editable="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt2"
                android:layout_below="@+id/eT1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp"
                android:text="Modificar Hora "
                android:clickable="true"
                android:onClick="hora" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar:"
                android:id="@+id/tV1"
                android:layout_marginTop="49dp"
                android:layout_below="@+id/eT3"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/eT4"
                android:layout_below="@+id/tV1"
                android:layout_alignParentStart="true"
                android:editable="true" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button11"
                android:layout_alignTop="@+id/tV1"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:onClick="maps"
                android:background="@drawable/maps" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_below="@+id/eT4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:layout_alignBottom="@+id/imageButton5"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/editText5"
                android:layout_marginTop="50dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:layout_alignBottom="@+id/imageButton6"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageButton6" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:layout_alignBottom="@+id/imageButton7"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageButton7" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText7"
                android:layout_above="@+id/imageButton9"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageButton8" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText8"
                android:layout_alignBottom="@+id/imageButton9"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageButton9" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton5"
                android:background="@drawable/wasap"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:onClick="Arquero"
                android:layout_gravity="right"
                android:layout_below="@+id/spinner"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton6"
                android:background="@drawable/wasap"
                android:onClick="Defensor"
                android:clickable="true"
                android:layout_gravity="right"
                android:layout_below="@+id/imageButton5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton7"
                android:background="@drawable/wasap"
                android:onClick="Defensor"
                android:layout_below="@+id/imageButton6"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton8"
                android:background="@drawable/wasap"
                android:onClick="Delantero"
                android:layout_below="@+id/imageButton7"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton9"
                android:background="@drawable/wasap"
                android:clickable="true"
                android:onClick="Delantero"
                android:layout_below="@+id/imageButton8"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del arquero:"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de defensor:"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/imageButton6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de defensor:"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/imageButton7"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de delantero:"
                android:id="@+id/textView5"
                android:layout_alignTop="@+id/imageButton8"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre delantero:"
                android:id="@+id/textView6"
                android:layout_alignTop="@+id/imageButton9"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuar"
                android:id="@+id/button9"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imageButton9"
                android:layout_marginTop="30dp"
                android:onClick="Confirmar5" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
